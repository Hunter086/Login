{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
<link href="{{asset('css/login.css')}}" rel="stylesheet" type="text/css">

    <div class="container">
        <div class="card card-login mx-auto text-center " style="background-color: #E8FDFF">
            <div class="card-header mx-auto" style="background-color: #E8FDFF">
                 <span> <img src="{{asset('img/pngwing.com.png')}}" class="w-75" alt="Logo"> </span><br/>
                    <span class="logo_title mt-5" style="color: #04AD89"> Password Reset Email Sent </span>
                     <p style="color: #04AD89">
                        If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
                        This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                    </p>
                    <p style="color: #04AD89">If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
                    <div class="form-group">
                                   <a href="{{path('app_login')}}" class="btn btn-outline-danger">Go to the Log in!</a>
                    </div>     
            </div>
        </div>
    </div>
{% endblock %}
