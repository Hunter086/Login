{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<link href="{{asset('css/login.css')}}" rel="stylesheet" type="text/css">

<form method="post">
    
    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                    
                    </div>
                    <div class="col-sm-4">
                            <div class="card card-login  text-center" style="background-color: #E8FDFF  ">
                            <div class="card-header mx-auto" style="background-color: #E8FDFF  ">
                                <span> <img src="{{asset('img/pngwing.com.png')}}" class="w-75" alt="Logo"> </span><br/>
                                            <span class="logo_title mt-5" style="color: #04AD89  "> Login Dashboard </span>
                                            {% if error %}
                                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}
                                                </div>
                                            {% endif %}
                

                            </div>
                            <div class="card-body">
                                <form action="" method="post">
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user "></i></span>
                                        </div>
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                    </div>

                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>
                                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                    </div>

                                    <div>
                                    <a href="{{path('app_forgot_password_request')}}">Forget you Password</a>
                                    </div>   
                                    <input type="hidden" name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"
                                    >
                                    <div class="form-group">
                                        <input type="submit" name="btn" value="Login" class="btn btn-outline-danger float-right login_btn">
                                    </div>

                                </form>
                            </div>
                        </div>
                    
                    </div>
                    <div class="col-sm-4">
                    
                    </div>
                    
                </div>
            </div>



